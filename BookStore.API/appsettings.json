{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "BookStoreDB": "Server=.;Database=BookStoreAPI;Integrated Security=True"
    // 'Server=.' b/c we are using local database.
    // 'Database=' specifies the name of the database to create using EF Core Code-First approach.
    // We also need to specify how we are going to connect to the SQL Server. So we will be using integrated windows authentication and for that we have to set 'Integrated Security=True'.
  },
  "AllowedHosts": "*"
}
